<!doctype html>
<html xmlns:ng="http://angularjs.org/" ng-app="app" ng-controller="ApplicationCtrl">
<head>
    <meta charset="utf-8">
    <title>Kontoinfo</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" -%>
    <%= csrf_meta_tag %>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
<!-- Navbar
================================================== -->
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/">KontoInfo</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li id="nav-home">
                        <a href="/#/">Startseite</a>
                    </li>
                    <li class="dropdown" id="nav-account" ng-show="loggedIn">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            Mein Konto
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <a href="/#/account/profile" id="nav-account-profile">
                                Mein Profil
                            </a>
                            <a href="/#/account/accounts" id="nav-account-accounts">
                                Mein Konten
                            </a>
                        </ul>
                    </li>
                    <li ng-show="loggedIn"><a ng-click="logout()">Ausloggen</a></li>
                    <li ng-hide="loggedIn" id="nav-login"><a href="/#/login">Einloggen</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div ng-view></div>
</div>

</body>
</html>